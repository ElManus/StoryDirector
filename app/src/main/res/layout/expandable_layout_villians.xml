<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/expandable_layout_villians"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Выберите персонажа"
            android:layout_width="match_parent"
            android:textStyle="italic"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <!-- Самодельный ListView, стандартный не работает в ScrollView -->
    <com.apps.gragas.storydirector.Tools.NonScrollListView
        android:id="@+id/lvVillians"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.apps.gragas.storydirector.Tools.NonScrollListView>

</LinearLayout>